#!/bin/sh
. "$(dirname "$0")/husky.sh"

# 1) Lint/Prettier (루트 lint-staged 설정 사용)
npx lint-staged || exit 1

# 2) TS 타입체크 (frontend 기준 스크립트 필요)
npm --prefix frontend --silent run typecheck || exit 1

# 3) FE 앱 테스트 (pnpm로 워크스페이스 필터)
# pnpm -C frontend --filter hpc test -- --passWithNoTests || exit 1
# pnpm -C frontend --filter hwc test -- --passWithNoTests || exit 1
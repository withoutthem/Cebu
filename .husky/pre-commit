#!/bin/sh
# =====================================================================
# Husky pre-commit hook
# - FE: lint-staged â†’ TS íƒ€ì…ì²´í¬ â†’ Jest
# - BE: Docker(Compose) ì»¨í…Œì´ë„ˆì—ì„œ Maven ì •ì ë¶„ì„(Checkstyle/PMD)
# - compose íŒŒì¼ì€ infra/docker-compose.yml ìš°ì„  ì‚¬ìš©
# =====================================================================

. "$(dirname "$0")/husky.sh"
set -euo pipefail

# --------------------------- Helpers ---------------------------------
log()   { printf "\033[36m%s\033[0m\n" "$*"; }
ok()    { printf "âœ… \033[32m%s\033[0m\n" "$*"; }
warn()  { printf "âš ï¸  \033[33m%s\033[0m\n" "$*"; }
fail()  { printf "âŒ \033[31m%s\033[0m\n" "$*" >&2; exit 1; }
error() { printf "âŒ \033[31m%s\033[0m\n" "$*" >&2; }
divider(){ printf "\n\033[35mâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€\033[0m\n\n"; }

REPO_ROOT="$(git rev-parse --show-toplevel 2>/dev/null || pwd)"
cd "$REPO_ROOT"

divider
log "ğŸš€ Husky pre-commit Hook ì‹œì‘"

# ------------------------ Step 1: FE lint -----------------------------
divider
log "ğŸ”§ [Step 1] lint-staged ì‹¤í–‰"
if command -v npx >/dev/null 2>&1; then
  npx lint-staged || fail "lint-staged ì‹¤íŒ¨ â†’ ì»¤ë°‹ ì°¨ë‹¨"
else
  warn "npxê°€ ì—†ì–´ lint-stagedë¥¼ ê±´ë„ˆëœë‹ˆë‹¤."
fi

# -------------------- Step 2: FE TypeScript ---------------------------
divider
log "ğŸ” [Step 2] TypeScript íƒ€ì…ì²´í¬(frontend)"
if [ -d "frontend" ]; then
  npm --prefix frontend run typecheck || fail "TypeScript íƒ€ì…ì²´í¬ ì‹¤íŒ¨ â†’ ì»¤ë°‹ ì°¨ë‹¨"
else
  warn "frontend ë””ë ‰í† ë¦¬ë¥¼ ì°¾ì§€ ëª»í•´ íƒ€ì…ì²´í¬ë¥¼ ê±´ë„ˆëœë‹ˆë‹¤."
fi

# ----------------------- Step 3: FE Tests -----------------------------
divider
log "ğŸ§ª [Step 3] Jest í…ŒìŠ¤íŠ¸(frontend)"
if [ -d "frontend" ]; then
  npm --prefix frontend run test || fail "Jest í…ŒìŠ¤íŠ¸ ì‹¤íŒ¨ â†’ ì»¤ë°‹ ì°¨ë‹¨"
else
  warn "frontend ë””ë ‰í† ë¦¬ë¥¼ ì°¾ì§€ ëª»í•´ í…ŒìŠ¤íŠ¸ë¥¼ ê±´ë„ˆëœë‹ˆë‹¤."
fi

# --------------- Step 4: BE Static Analysis (Docker) ------------------
divider
log "ğŸ›  [Step 4] Java ì •ì ë¶„ì„ (Maven in Docker: Checkstyle/PMD)"

command -v docker >/dev/null 2>&1 || fail "Dockerê°€ í•„ìš”í•©ë‹ˆë‹¤."
docker compose version >/dev/null 2>&1 || fail "Docker Composeê°€ í•„ìš”í•©ë‹ˆë‹¤."

# compose íŒŒì¼ íƒìƒ‰
if   [ -f "infra/docker-compose.yml" ]; then
  COMPOSE_FILE="infra/docker-compose.yml"
elif [ -f "infra/docker-compose.yaml" ]; then
  COMPOSE_FILE="infra/docker-compose.yaml"
elif [ -f "docker-compose.yml" ]; then
  COMPOSE_FILE="docker-compose.yml"
elif [ -f "docker-compose.yaml" ]; then
  COMPOSE_FILE="docker-compose.yaml"
elif [ -f "compose.yaml" ]; then
  COMPOSE_FILE="compose.yaml"
else
  fail "compose íŒŒì¼ì„ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤."
fi

docker compose -f "$COMPOSE_FILE" config >/dev/null || fail "compose êµ¬ì„± ì˜¤ë¥˜"

if [ -f "backend/pom.xml" ]; then
  if ! docker compose -f "$COMPOSE_FILE" run --rm --remove-orphans -T code-quality \
        bash -lc 'cd backend && mvn -q -DskipTests \
          -Dcheckstyle.skip=false -Dpmd.skip=false \
          clean verify'
  then
    error "Java ì •ì ë¶„ì„ ì‹¤íŒ¨ â†’ ì»¤ë°‹ ì°¨ë‹¨"
    echo "â”€â”€â”€ PMD ìš”ì•½ â”€â”€â”€"
    PMD_SUMMARY_LIMIT=100 ./scripts/pmd-summary.sh || true
    echo "ğŸ“„ ìƒì„¸: backend/target/site/pmd.html  ë˜ëŠ”  backend/target/pmd.xml"
    exit 1
  fi
else
  warn "backend/pom.xmlì„ ì°¾ì§€ ëª»í•´ Java ì •ì ë¶„ì„ì„ ê±´ë„ˆëœë‹ˆë‹¤."
fi

divider
ok "[pre-commit] ëª¨ë“  ê²€ì‚¬ í†µê³¼ ğŸ‰"
divider
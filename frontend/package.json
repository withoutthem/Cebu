{
  "name": "frontend-workspace",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "local:hpc": "pnpm --filter hpc dev -- --mode local",
    "local:hwc": "pnpm --filter hwc dev -- --mode local",
    "build:hpc:dev": "pnpm --filter hpc build -- --mode dev",
    "build:hpc:prod": "pnpm --filter hpc build -- --mode prod",
    "build:hwc:dev": "pnpm --filter hwc build -- --mode dev",
    "build:hwc:prod": "pnpm --filter hwc build -- --mode prod",
    "lint": "pnpm -r exec eslint .",
    "format": "pnpm -r exec prettier -w .",
    "typecheck": "tsc -p tsconfig.base.json --noEmit --pretty false",
    "types:shared": "tsc -b shared",
    "test:hpc": "pnpm --filter hpc test",
    "test:hwc": "pnpm --filter hwc test",
    "test:shared": "pnpm --filter @cebu/shared test",
    "test:all": "pnpm -C -r --filter hpc --filter hwc --filter @cebu/shared --aggregate-output --workspace-concurrency=1 run test"
  },
  "dependencies": {
    "@emotion/styled": "^11.11.5",
    "@mui/material": "^6.1.3",
    "@stomp/stompjs": "^7.0.0",
    "@tanstack/react-query": "^5.56.2",
    "axios": "^1.7.7",
    "dayjs": "^1.11.13",
    "i18next": "^24.2.0",
    "motion": "^11.15.0",
    "openapi-typescript": "^7.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.54.2",
    "react-i18next": "^15.0.3",
    "react-markdown": "^9.0.3",
    "react-router-dom": "^7.0.2",
    "react-virtuoso": "^4.13.0",
    "sockjs-client": "^1.6.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@jest/globals": "^30.0.5",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.2.5",
    "typescript": "~5.8.3"
  }
}

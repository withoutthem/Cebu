{
  "private": true,
  "scripts": {
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^16.1.5",
    "eslint": "^9.33.0",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "frontend/apps/{hpc,hwc}/**/*.{ts,tsx,js,jsx}": [
      "eslint --config frontend/eslint.config.js --fix",
      "prettier --write"
    ],
    "frontend/shared/**/*.{js,jsx}": [
      "eslint --config frontend/eslint.config.js --fix",
      "prettier --write"
    ],
    "frontend/{apps/{hpc,hwc},shared}/**/*.{json,md}": [
      "prettier --write"
    ],
    "frontend/shared/src/**/*.{ts,tsx}": [
      "eslint --config frontend/eslint.config.js --fix",
      "prettier --write",
      "sh -c 'npm --prefix frontend run types:shared --silent'"
    ]
  }
}